{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "esnext.asynciterable",
        "dom"
      ],
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "skipLibCheck": true,
      "paths": {
        "@/*": [
          "./*"
        ]
      },
      "types": [
        "@types",
        "jest"
      ]
    },
    "include": [
      "index.ts",
      "lib.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }